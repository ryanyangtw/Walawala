<div class="bg-purple">
<div class="relative select_class">
  <%= form_tag(subscribe_categories_path) do %>
    <div class="s_c_title">選擇你喜歡的分類</div>
    <%= submit_tag("確認", class: "s_c_submit", id: "s_c_submit") %>
    <!-- <input type="submit" value="確認" class="s_c_submit" id='s_c_submit'> -->
    <hr class="s_c_hr">
    <div class="s_c_content">

      <% @categories.each do |category| %>
        <div class="s_c_item"> 
        <%= check_box_tag("user[subscribed_category_ids][]", category.id, current_user.subscribed_categories.include?(category), class: 's_c_checkbox', id: category.id) %>
        <!-- <input type="checkbox"  value="" class='s_c_checkbox' id='<%= category.id %>'; > -->
  
        <div class="s_c_pic">
            <div class="s_c_black">
                <div class="s_c_box">
                  <%= image_tag(category.image_web_url, style: "width: 100%; height: 100%") %>
                    <!-- <img class="s_c_icon" src="../images/s_c_icon-03.png"> -->
                </div>
                <div class="s_c_subtitle"><%= category.title %></div>
                
                <% if current_user.subscribed_categories.include?(category) %>
                  <div class="s_c_check like" style="display: inline-block;"></div>
                <% else %>
                  <div class="s_c_check"></div>
                <% end %>
            </div>
            </div>
        </div>  
      <% end %>

      
    </div>
  <% end %>

</div>
  <%= render(partial: "shared/footer") %>
</div>




