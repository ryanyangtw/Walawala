
<hr class="style-six">

		<%= render partial: 'shared/errors', locals: {obj: @program}%>

		<div class="form-group">
			
			<%= f.label(:subject ,'節目名稱:') %>
			<%= f.text_field(:subject , :class => "form-control") %>
		</div>


		<% Category.all.each do |category| %>
			<%= check_box_tag "program[categories_ids][]", category.id,  @program.category_ids.include?(category.id), :id=> dom_id(category) %>
			<%= label_tag dom_id(category) , category.title%>
		<%end%>


		<div class = "form-group">
			<%= f.label(:image, "節目封面:") %>
			<%= f.file_field(:image , :class => "form-control") %>

		</div>


		<div class="form-group">
			
			<%= f.label('節目介紹:') %>
			<%= f.text_area(:introduction , :class => "form-control" , rows: "8") %>
		</div>

			
		<hr class="style-six">

	



